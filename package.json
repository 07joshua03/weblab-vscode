{
  "name": "weblab-vscode",
  "displayName": "weblab-vscode",
  "description": "WebLab functionality within VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "course-explorer",
          "title": "WebLab",
          "icon": "resources/tud_flame.svg"
        }
      ]
    },
    "views": {
      "course-explorer": [
        {
          "id": "courses",
          "name": "WebLab"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "weblab-vscode.syncAssignment",
          "when": "view == courses && viewItem == assignment"
        },
        {
          "command": "weblab-vscode.submitAssignment",
          "when": "view == courses && viewItem == assignment"
        },
        {
          "command": "weblab-vscode.yourTest",
          "when": "view == courses && viewItem == assignment"
        },
        {
          "command": "weblab-vscode.specTest",
          "when": "view == courses && viewItem == assignment"
        }
      ]
    },
    "commands": [
      {
        "command": "weblab-vscode.login",
        "title": "Login to WebLab"
      },
      {
        "command": "weblab-vscode.showCourses",
        "title": "Show WebLab courses"
      },
      {
        "command": "weblab-vscode.isLoggedIn",
        "title": "Check if logged in to WebLab"
      },
      {
        "command": "weblab-vscode.openAssignment",
        "title": "Open WebLab assignment"
      },
      {
        "command": "weblab-vscode.syncAssignment",
        "title": "Sync WebLab assignment",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "weblab-vscode.submitAssignment",
        "title": "Submit WebLab assignment"
      },
      {
        "command": "weblab-vscode.yourTest",
        "title": "Run Your Test"
      },
      {
        "command": "weblab-vscode.specTest",
        "title": "Run Spec Test"
      },
      {
        "command": "weblab-vscode.openBrowser",
        "title": "Open WebLab browser"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.14.2+sha512.6e2baf77d06b9362294152c851c4f278ede37ab1eba3a55fda317a4a17b209f4dbb973fb250a77abc463a341fcb1f17f17cfa24091c4eb319cda0d9b84278387",
  "dependencies": {
    "diff": "^7.0.0",
    "playwright": "1.38.0"
  }
}